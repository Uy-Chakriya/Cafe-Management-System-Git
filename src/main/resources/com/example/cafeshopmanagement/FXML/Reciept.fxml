<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/19"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.cafeshopmanagement.Controller.ReceiptController">

    <children>
        <AnchorPane prefHeight="400.0" prefWidth="600.0">
            <children>
                <Label layoutX="216.0" layoutY="14.0" text="MarcoMan's Cafe">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Label layoutX="14.0" layoutY="61.0" text="Customer ID:">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <Label fx:id="receipt_customer_id" layoutX="123.0" layoutY="61.0" text="00">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>

                <TableView fx:id="receipt_tableview" layoutX="14.0" layoutY="95.0"
